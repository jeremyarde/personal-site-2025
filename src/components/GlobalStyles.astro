<style is:global>
  /* Reset & Variables */
  :root {
    --font-sans: "Inter", ui-sans-serif, system-ui, -apple-system,
      BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial,
      sans-serif;
    --font-serif: "Charter", "Bitstream Charter", "Sitka Text", Cambria, serif;
    --text-main: #1a1a1a;
    --text-muted: #666;
    --bg-color: #ffffff;
    --link-color: #1a1a1a;
    --link-hover: #555;
    --max-width: 42rem; /* ~672px, similar to standard readable width */
    --spacing-unit: 1.5rem;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-sans);
    font-size: 16px;
    line-height: 1.6;
    background-color: var(--bg-color);
    color: var(--text-main);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* Layout */
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem 1.5rem;
    width: 100%;
  }

  /* Typography */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: 600;
    line-height: 1.2;
    margin: 2rem 0 1rem;
    color: var(--text-main);
  }

  h1 {
    font-size: 2rem;
    letter-spacing: -0.02em;
  }
  h2 {
    font-size: 1.5rem;
    letter-spacing: -0.01em;
  }
  h3 {
    font-size: 1.25rem;
  }

  p {
    margin-bottom: 1.5rem;
  }

  /* Header / Nav */
  .site-header {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: baseline; /* Align text baselines */
    margin-bottom: 4rem;
    padding-top: 1rem;
  }

  .site-title {
    font-weight: 700;
    font-size: 1.25rem;
    text-decoration: none;
    color: var(--text-main);
    margin-right: 2rem;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-link {
    text-decoration: none;
    color: var(--text-muted);
    font-size: 1rem;
    transition: color 0.2s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--text-main);
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  /* Links in text */
  .content a {
    color: var(--link-color);
    text-decoration: underline;
    text-decoration-color: #ddd;
    text-underline-offset: 4px;
    transition: all 0.2s;
  }

  .content a:hover {
    background-color: #f0f0f0;
    text-decoration-color: var(--link-color);
  }

  /* Utilities */
  .text-muted {
    color: var(--text-muted);
  }

  /* Lists */
  ul {
    padding-left: 1.2rem;
    margin-bottom: 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
  }

  /* Specific overrides or helpers */
  .flex-between {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .date {
    font-feature-settings: "tnum";
    font-variant-numeric: tabular-nums;
    color: var(--text-muted);
    font-size: 0.9rem;
  }
</style>
