---
import "../../styles/global.css";

function createProject(project_title, site_url, github_url, date) {
  return {
    project_title,
    site_url,
    github_url,
    date,
  };
}

const projectDetails = [
  createProject(
    "Blackball (Card Game)",
    "https://jeremyarde.github.io/blackballgame/",
    "https://github.com/jeremyarde/blackballgame",
    "2024-03 - 2024-12"
  ),
  {
    project_title: "Habit Reminder",
    site_url: "",
    github_url: "https://github.com/jeremyarde/reminder",
    date: "2021-01-01",
  },
  {
    project_title: "Domino Counter",
    site_url: "https://jeremyarde.github.io/domino-counter-frontend/",
    github_url: "https://github.com/jeremyarde/domino-counter-frontend",
    date: "2021-04-27",
  },
  {
    project_title: "Advent of Code 2020 (Rust)",
    site_url: "",
    github_url: "https://github.com/jeremyarde/advent-of-code-2020",
    date: "2020-12-31",
  },
];
---

<div class="flex flex-col justify-center align-middle container">
  <h1 class="pt-16 pb-6 text-2xl title">projects</h1>
  <ul class="flex flex-col gap-4 pt-6 container">
    {
      projectDetails.map((project) => (
        <li>
          <div class="flex flex-col pb-4">
            <label>{project.project_title}</label>
            <a class="pl-4" href={project.site_url}>
              website
            </a>
            <a class="pl-4" href={project.github_url}>
              github
            </a>
          </div>
          {/* <p>{project.date}</p> */}
        </li>
      ))
    }
  </ul>
</div>
