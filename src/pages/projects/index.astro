---
import Layout from "../../layouts/Layout.astro";
import ProjectComponent from "../../components/ProjectComponent.astro";
import { projectDetails, siteCopy } from "../../data/siteContent";
---

<Layout title="Projects">
  <div class="page-header">
    <p class="eyebrow">{siteCopy.projects.eyebrow}</p>
    <h1>{siteCopy.projects.title}</h1>
    <p class="intro-text">{siteCopy.projects.intro}</p>
  </div>

  <div class="projects-grid">
    {projectDetails.map((project) => (
      <ProjectComponent imagePath={project.imagePath} project={project} />
    ))}
  </div>
</Layout>

<style>
  .page-header {
    margin-bottom: 3rem;
    max-width: var(--max-width-narrow);
  }

  .intro-text {
    font-size: 1.05rem;
    color: var(--text-muted);
    margin-top: 0.5rem;
  }

  .eyebrow {
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: 0.24em;
    color: var(--text-subtle);
    margin: 0 0 1rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 900px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
